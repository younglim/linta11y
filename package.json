{
  "name": "linta11y",
  "version": "0.0.2",
  "author": "younglim",
  "license": "MIT",
  "description": "Universal accessibility scanner that lints remote repositories and produces JSON/HTML reports.",
  "scripts": {
    "scan": "echo 'Run via workflow'",
    "test": "eslint \"./target-code/**/*.{js,jsx,ts,tsx,vue,html}\" --config eslint.config.js --format json --output-file eslint-raw.json",
    "oobee": "node cli.js --oobee",
    "report": "node map-wcag.js && node generate-html.js",
    "report:html": "node generate-html.js",
    "report:json": "node map-wcag.js"
  },
  "bin": {
    "linta11y": "./cli.js"
  },
  "devDependencies": {
    "@angular-eslint/eslint-plugin": "^17.3.0",
    "@angular-eslint/eslint-plugin-template": "^17.3.0",
    "@angular-eslint/template-parser": "^17.3.0",
    "@html-eslint/eslint-plugin": "^0.24.0",
    "@html-eslint/parser": "^0.24.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-native-a11y": "^3.3.0",
    "eslint-plugin-vue": "^9.25.0",
    "eslint-plugin-vuejs-accessibility": "^2.3.0",
    "postcss": "^8.4.38",
    "stylelint": "^15.11.0",
    "stylelint-a11y": "^1.2.3",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "typescript": "^5.4.0",
    "vue-eslint-parser": "^9.4.0"
  },
  "dependencies": {
    "@govtechsg/oobee": "^0.10.78-alpha1"
  }
}